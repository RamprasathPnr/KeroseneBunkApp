<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/headerLayout"
        android:layout_height="80dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="Pending Registration" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/topLayout"
        android:layout_below="@+id/headerLayout"
        android:background="@drawable/back_top_left"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tvHash"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="#" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#4fa5d5" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Card Number" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#4fa5d5" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Mobile Number" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#4fa5d5" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Action" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/topLayout"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:divider="#00000000"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="5dp"
        android:layout_above="@+id/relativeLayout4">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Records Found"
        android:visibility="gone"
        android:id="@+id/reg_norecord"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#0000ff"
        android:id="@+id/relativeLayout4">

        <TextView
            android:id="@+id/login_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/omneAgate"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>