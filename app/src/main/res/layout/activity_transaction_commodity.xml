<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/topLayout"
        android:background="#DDDDDD"
        android:layout_height="35dp"
        android:id="@+id/ress">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:id="@+id/fpsCode"/>
        <TextView
            android:id="@+id/date_today"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_toLeftOf="@+id/textclock"
            android:textColor="@color/black" />
        <DigitalClock
            android:id="@+id/textclock"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayoutOuter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout_close"
        android:layout_below="@+id/topLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutTitle"
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:background="#777777"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/commodity"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/opening_stock"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/stock_adjustment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/inward_qty"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/sale_qty"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/current_stock"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="false"
            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/listView_linearLayout_stock_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:background="#D4D4D4">

            <TextView
                android:id="@+id/totBills"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/close_sale_total_bills"
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:layout_below="@+id/totBills"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:textColor="#000000"
                android:textSize="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="99dp"
            android:background="#D4D4D4">

            <TextView
                android:id="@+id/totAmount"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/close_sale_total_amt"
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:layout_below="@+id/totAmount"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#0277BD"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
