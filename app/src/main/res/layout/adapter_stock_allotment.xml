<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutTitleAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/commodityBackground"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal">


            <!--  <com.omneAgate.Util.SquareLayout
                  android:layout_width="fill_parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="5dp"
                  android:layout_height="45dp">

                  <ImageView
                      android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:id="@+id/imageAllotment" />

              </com.omneAgate.Util.SquareLayout>
  -->
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent">

            </View>


            <TextView
                android:id="@+id/allotment_name"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.31"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/unitAllotment"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/allotment_unit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/login_background"
                android:textSize="18dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allotment_alloted"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/login_background"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allotment_issued"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/login_background"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allotment_balance"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/login_background"
                android:textSize="23sp" />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent">

        </View>


    </LinearLayout>

</LinearLayout>