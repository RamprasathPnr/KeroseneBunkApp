<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:id="@+id/fpsStockAdjustListLinearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="110dp"
        android:background="#777777"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fpsStockAdjustListSnoLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/white"
                android:textSize="23dp"

                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fpsStockAdjustListChallanNoLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Challan No"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fpsStockAdjustDispatchDateLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Dispatch Date"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fpsStockAdjustQty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Qty"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fpsStockAdjustListStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fpsStockAdjustListSyncLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Sync"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/navigationLayout"
        android:layout_below="@+id/fpsStockAdjustListLinearLayoutTitle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1">
        <com.omneAgate.Util.PullToRefresh.LoadMoreListView
            android:id="@+id/listView_fps_stock_adjust"
            style="@style/scrollbar_shape_style"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#777777"
            android:dividerHeight="0dp"
            android:fadeScrollbars="false" />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/progress_bar_color" />
        <RelativeLayout
            android:id="@+id/linearLayoutNoRecords"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/tvNoRecords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_records"
                android:textColor="#000000"
                android:textSize="23dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/navigationLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/bottomScreen"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tvViewStockHistory"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:background="#444444"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="22dp" />


        <Button
            android:id="@+id/btnClose"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="#0277BD"
            android:onClick="onClose"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </RelativeLayout>

    <include
        android:id="@+id/bottomScreen"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

