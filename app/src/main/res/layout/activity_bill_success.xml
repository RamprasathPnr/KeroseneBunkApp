<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/topLayout"
        android:layout_marginRight="36dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="15dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/all_success_back"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tvBillDetailUfcLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/billDetailTxnBill"
                        android:textColor="#90c0f0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBillDetailUfc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#003048"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/tvBillDetailAmountLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/billDetailAmountLabel"
                        android:textColor="#90c0f0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBillDetailAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:textColor="#003048"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/tvBillDateLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="@string/billDetailUfcLabel"
                        android:textColor="#90c0f0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBillDetailDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#003048"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/tvBillDetailHeadOfTheFamilyLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/billDetailFamilyHeadOfTheFamilyLabel"
                        android:textColor="#90c0f0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvBillDetailHeadOfTheFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#003048"
                        android:textSize="25sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvBillDetailAddressLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tvBillDetailDateLabel"
                        android:layout_marginTop="10dp"
                        android:text="@string/billDetailAddressLabel"
                        android:textColor="#90c0f0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvBillDetailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvBillDetailDate"
                        android:textColor="#003048"
                        android:textSize="25sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/billDetailLinearLayoutLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="#444444"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/commoditys"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center">
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/billDetailQuantity"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/billDetailProductPrice"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="Amount(â‚¹ )"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/summaryCancel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/billDetailLinearLayoutLabel"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/listView_bill_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/billDetailLinearLayoutLabel"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/summaryCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/summarySubmit"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:background="#009f83"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/submit"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/summaryEdit"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/summarySubmit"
                    android:background="#2583c3"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/edit"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/tvBillDetailTotal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/summaryEdit"
                    android:gravity="center"
                    android:textColor="#0765a5"
                    android:textSize="27sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>