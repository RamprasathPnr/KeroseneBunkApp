<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_user_pos">

    <include
        android:id="@+id/topLayout"
        layout="@layout/actionbar_custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textRegistration"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_login"
        android:onClick="registrationStatus"
        android:paddingBottom="17dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="17dp"
        android:textColor="#ffffff" />

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
