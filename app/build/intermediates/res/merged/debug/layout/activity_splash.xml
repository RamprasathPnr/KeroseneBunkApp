<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1 ">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tamil_nadu_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tamilHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="impact"
            android:text="@string/headerAllPageEnglish"
            android:textColor="#686868"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tamilHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tamilHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#035703"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tamilHeader3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tamilHeader2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#6e6e6e"
            android:textSize="28dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/login_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/omg_logo"
                android:text="@string/omneAgate"
                android:textColor="#999999"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/omg_logo"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/omeagatelogo" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
