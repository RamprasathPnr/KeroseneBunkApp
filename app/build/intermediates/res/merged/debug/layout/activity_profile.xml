<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/topLayout"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp">

                <TextView
                    android:id="@+id/fps_code"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_fps_code"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/bunker_name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_fps_working_hours"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:id="@+id/store_type"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_type"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp">

                <TextView
                    android:id="@+id/contact_person"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_location"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/contact_number"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_agency"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/profile_background"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#025584"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_sim_no"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#444444"
                    android:textSize="30dp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#1097db"
                    android:text="Close"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
